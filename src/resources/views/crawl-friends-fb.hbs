<h3>To get started, please enter your email/account and password below</h3>
<form method="POST">
	<div class="form-group">
		<label for="email">Email address</label>
		<input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
			placeholder="Enter email" />
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input type="password" class="form-control" id="password" name="password" placeholder="Password" />
	</div>

	<button type="submit" class="btn btn-primary">
		Crawl
	</button>
	<button type="button" class="btn btn-danger ms-5">
		<a href="/" class="text-white" style="text-decoration:none;">Cancel</a>
	</button>
</form>

<div class="result mt-5" style="font-size:16px ;">
	<h4> Result: </h4>
	<div class="friend-list">
		{{#each friends}}
		<div class="row border-bottom mt-2">
			<div class="col-sm-2">
				{{this.index}}
			</div>
			<div class="col-sm-4">
				{{this.name}}
			</div>
			<div class="col-sm-6">
				<a href="{{this.link}}">{{this.link}}</a>
			</div>
		</div>
		{{/each}}
	</div>
</div>